<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/real_madrid_background_grey"
        android:scrollbars="vertical">

        <!--<ImageView
            android:id="@+id/mainImageView"
            android:layout_width="205dp"
            android:layout_height="139dp"
            android:layout_marginStart="163dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="164dp"
            android:background="@color/real_madrid_background_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number"
            app:srcCompat="@drawable/realmadrid84x84_1_f" />-->

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/mainImageView"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="64dp"
            android:background="#005CFA"
            android:src="@drawable/realmadrid84x84_2_f"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number"
            app:shapeAppearanceOverlay="@style/circleImageView4">

        </com.google.android.material.imageview.ShapeableImageView>

        <ImageView
            android:id="@+id/mainImageView2"
            android:layout_width="49dp"
            android:layout_height="34dp"
            android:layout_marginStart="163dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="164dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainImageView"
            app:srcCompat="@drawable/ic_flags_fifa_spain" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="177dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="177dp"
            android:fontFamily="@font/proximanova_bold"
            android:text="Player Name"
            android:textColor="@color/real_madrid_black"
            android:textSize="@dimen/text_view_header_big_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainImageView2" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="177dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="177dp"
            android:fontFamily="@font/proximanova_regular"
            android:text="Position"
            android:textSize="@dimen/text_view_sub_header_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="177dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="177dp"
            android:fontFamily="@font/jersey_m54"
            android:text="24"
            android:textColor="@color/real_madrid_dark_blue_colorPrimary2"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="177dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="177dp"
            android:fontFamily="@font/proximanova_regular"
            android:lineHeight="@dimen/text_view_line_height"
            android:paddingStart="@dimen/text_view_padding_side_16dp"
            android:paddingTop="@dimen/text_view_padding_top_8dp"
            android:paddingEnd="@dimen/text_view_padding_side_16dp"
            android:paddingBottom="@dimen/text_view_padding_top_8dp"
            android:text="Player Info"
            android:textColor="@color/real_madrid_black"
            android:textSize="@dimen/text_view_header_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>